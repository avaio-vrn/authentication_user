<%= form_tag authentication_user.user_sessions_path, method: :post, class:'form-login' do %>
    <%= label_tag :email, User.human_attribute_name(:email), class: 'login-label' %>
    <%= text_field_tag :email, @user.email, placeholder: User.human_attribute_name(:email), class:'login-input' %>

    <%= label_tag :password, User.human_attribute_name(:password), class:'login-label' %>
    <%= password_field_tag :password, @user.password, placeholder: User.human_attribute_name(:password), class:'login-input' %>

    <label class="f-a-checkbox">
      <%= check_box_tag :remember_me, 1, params[:remember_me] %>
      <span class="f-a-checkbox-span"></span>
      <%= content_tag :span, t(:remember_me), class: 'login-label' %>
    </label>

  <div class="path-12 marg">
    <%= submit_tag 'Войти'.freeze, class: 'login-button fl-l'.freeze %>
    <%= link_to t('views.form.reset_password'), authentication_user.new_password_reset_path, class:'content-link marg-lr abs-b'.freeze %>
  </div>
<% end %>
<div class='clearfloat'> </div>
